%div.container
  %div.col-xs-6.col-xs-offset-3
    %h1 Crear Articulo

    = form_for(@article, :html => {:class => "form-horizontal"}) do |f|   
      %div.form-group
        %label.control-label Titulo
        %div
          = f.text_field :title, placeholder: "Titulo", class: "form-control" 
      %div.form-group
        %label.control-label Articulo  
        %div
          = f.text_field :body, placeholder: "Articulo", class: "form-control"
      %div.form-group    
        = f.submit "Submit", class: "btn btn-lg btn-primary btn-block"
    